<div class="row">
  <h1>Welcome</h1>

  <div class="center">
    <% if user_signed_in? %>
      <h4>Credit : $<%= current_user.credit %></h4>
      <br>
      <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "btn btn-danger btn-lg" %>
    <% else %>
      <%= link_to 'Log in', new_user_session_path, class: "btn btn-success btn-lg" %>
    <% end %>
  </div>
</div><!-- row -->
